{
  "extends": "stylelint-config-standard",
  "plugins": [
		"stylelint-order",
		"stylelint-scss"
	],
	"rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "apply",
          "content",
          "each",
          "else",
          "extend",
          "for",
          "function",
          "if",
          "include",
          "mixin",
          "responsive",
          "return",
          "screen",
          "tailwind",
          "variants",
          "while"
        ]
      }
    ],
    "declaration-block-trailing-semicolon": null,
    "no-descending-specificity": null,
    "order/properties-alphabetical-order": true,
    "order/order": [
      "custom-properties",
			"declarations"
		],
    "string-quotes": "single"
	}
}
