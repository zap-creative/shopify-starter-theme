{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}

<div class="product"
  data-section-id="{{ section.id }}"
  data-section-type="product"
>
  <div id="overview" class="desktop:grid desktop:grid-cols-5 desktop:gap-8">

    <div class="lg:col-span-3">
      <div class="prose">
        <div class="text-center">
          {% include 'responsive-image' with image: featured_image, width: 1200, image_attributes: "data-featured-image" %}
        </div>
        {% if product.images.size > 1 %}
          <div class="my-4">
            {% for image in product.images %}
            <a href="{{ image.src | img_url: '1200x' }}" data-thumbnail-links><img data-src="{{ image | img_url: '50x50' }}" alt="{{ image.alt | escape }}" class="lazyload"></a>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>

    <div class="lg:col-span-2">
      <div class="prose">
        <h1 class="product-title">{{ product.title }}</h1>
        <p>
          {% if product.price_varies %}
            {{ product.price_min | money }} - {{ product.price_max | money }}
          {% else %}
            {{ product.price | money }}
          {% endif %}
        </p>

        {% render 'product-form' with
          product: product,
          current_variant: current_variant
        %}

        <div>{{ product.description }}</div>
      </div>
    </div>

  </div> <!--.grid-->
</section>