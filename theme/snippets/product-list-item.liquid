{%- comment -%}
  Accepts:
  - product: {Object} Product object
  - collection {Object} Collection object

  Usage:
  {% include 'product-list-item' with product: product, collection: collection %}
{%- endcomment -%}

{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}

<div class="text-center">
  <a href="{{ product.url | within: collection }}">
    {% include 'responsive-image' with image: product.featured_image, width: 600 %}
  </a>
  <h2 class="text-xl m-2">
    <a href="{{ product.url | within: collection }}">{{ product.title }}</a>
  </h2>
  <p class="mt-0">
    {{ product.price | money }}
    {%- unless product.available -%} - <strong>sold out</strong>{%- endunless -%}
  </p>
  {%- if interactive -%}
    {% include 'product-form' with product: product, json: true %}
  {%- endif -%}
</div>